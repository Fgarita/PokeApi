@{
    Layout = "_Layout";
}

<div class="container">
    <h1>Search for a Pokémon</h1>

    <form asp-action="Index" method="post">
        <label for="pokemonId">Enter Pokémon ID:</label>
        <input type="number" id="pokemonId" name="id" min="1" required />
        <button type="submit">Search</button>
    </form>

    @if (Model != null)
    {
        <div class="pokemon-details">
            <h2>@Model.Name</h2>
            <img src="@Model.FrontDefaultImage" alt="@Model.Name" class="pokemon-image" />
            <ul class="pokemon-stats">
                <li><strong>ID:</strong> @Model.Id</li>
                <li><strong>Height:</strong> @Model.Height</li>
                <li><strong>Weight:</strong> @Model.Weight</li>
                <li><strong>Base Experience:</strong> @Model.BaseExperience</li>
            </ul>
            <div class="pokemon-abilities">
                <h3>Abilities:</h3>
                <ul>
                    @foreach (var ability in Model.Abilities)
                    {
                        <li>@ability</li>
                    }
                </ul>
            </div>
        </div>
    }
</div>




